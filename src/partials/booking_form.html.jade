.appointment
  .header.text-center
    h2 Make an Appointment
    a.number(href='#')
      i.fa.fa-phone.fa-fw
      |  0800 020 9511
    span.or OR
  // form of appointment
  .row
    form(method='post', action='#')
      .form
        .input-group.margin-bottom-sm.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
          input.form-control(type='text', placeholder='Full Name *', required='')
        .input-group.margin-bottom-sm.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
          input.form-control(type='text', placeholder='Email Address *', required='')
        .input-group.margin-bottom-sm.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
          input.form-control(type='text', placeholder='Appointment Date *', required='')
        .input-group.margin-bottom-sm.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
          input.form-control(type='text', placeholder='Mobile Number *', required='')
      .input-group.margin-bottom-sm.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        textarea.form-control(rows='6', placeholder='Your Problem *', required='')

      .col-md-8.col-md-offset-1.col-sm-8.col-sm-offset-1.col-xs-10.col-xs-offset-1
        .g-recaptcha(data-size="normal" data-sitekey="6LcHaQkTAAAAAC8BnniU12apitT4sfjb3TrUVNhN")

      .clearfix

      .col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1
        input.btn.btn-primary.send(type='submit', value='Send')
  // end of form
// end of appointment
